<h2>商品新規登録</h2>
<%= form_with url: admin_items_path, method: :post do |f| %>
  <div class="field">
    <label for="name" class="col col-xs-12 col-sm-4 col-md-3 control-label">商品画像</label>
    <%= f.file_field :image, autofocus: true, autocomplete: "image" %>
  </div>
  
  <div class="field">
    <label for="name" class="col col-xs-12 col-sm-4 col-md-3 control-label">商品名</label>
    <%= f.text_field :name, autofocus: true, autocomplete: "name" %>
  </div>
  
  <div class="field">
    <label for="name" class="col col-xs-12 col-sm-4 col-md-3 control-label">商品説明</label>
    <%= f.text_area :introduction, autofocus: true, autocomplete: "introduction" %>
  </div>
  
  <div class="field">
    <label for="name" class="col col-xs-12 col-sm-4 col-md-3 control-label">ジャンル</label>
    <%#= f.collection_select :保存先のカラム名, テーブル（モデル）名.all, :実際にDBに保存させるカラム名, :選択肢に用いるカラム名, include_blank: "選択して下さい" %>
  </div>
  
  <div class="field">
    <label for="name" class="col col-xs-12 col-sm-4 col-md-3 control-label">税抜価格</label>
    <%= f.text_field :price, autofocus: true, autocomplete: "price" %>
  </div>
  
  <div class="field">
    <label for="name" class="col col-xs-12 col-sm-4 col-md-3 control-label">販売ステータス</label>
    <%= f.text_field :item_status, autofocus: true, autocomplete: "item_status" %>
  </div>
  
  <div class="actions">
    <%= f.submit "新規登録" %>
  </div>
<% end %>