<h2>商品新規登録</h2>
<%= form_with model: @item, url: admin_item_path, method: :patch do |f| %>
  <div class="field">
    <label for="name" class="col col-xs-12 col-sm-4 col-md-3 control-label">商品画像</label>
    <%= f.attachment_field :image, autofocus: true, autocomplete: "image" %>
  </div>
  
  <div class="field">
    <label for="name" class="col col-xs-12 col-sm-4 col-md-3 control-label">商品名</label>
    <%= f.text_field :name, autofocus: true, autocomplete: "name" %>
  </div>
  
  <div class="field">
    <label for="name" class="col col-xs-12 col-sm-4 col-md-3 control-label">商品説明</label>
    <%= f.text_area :introduction, autofocus: true, autocomplete: "introduction" %>
  </div>
  
  <div class="field">
    <label for="name" class="col col-xs-12 col-sm-4 col-md-3 control-label">ジャンル</label>
    <%= f.collection_select :genre_id, Genre.all, :id, :genre_name, include_blank: "選択して下さい" %>
  </div>
  
  <div class="field">
    <label for="name" class="col col-xs-12 col-sm-4 col-md-3 control-label">税抜価格</label>
    <%= f.text_field :price, autofocus: true, autocomplete: "price" %>
  </div>
  
  <div class="field">
    <%= f.radio_button :item_status, :sale %>
    <%= f.label :item_status, "販売中", {value: :sale, style: "display: inline-block;"} %>
    <%= f.radio_button :item_status, :sale_stop %>
    <%= f.label :item_status, "販売停止中", {value: :sale_stop, style: "display: inline-block;"} %>
  </div>
  
  <div class="actions">
    <%= f.submit "変更を保存" %>
  </div>
<% end %>