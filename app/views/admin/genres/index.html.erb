<h2>ジャンル一覧</h2>
<%= form_with url: admin_genres_path, method: :post do |f| %>
  <div class="field">
    <label for="name" class="col col-xs-12 col-sm-4 col-md-3 control-label">ジャンル名</label>
    <%= f.text_field :genre_name, autofocus: true, autocomplete: "introduction" %>
    <%= f.submit "新規登録" %>
  </div>
<% end %>
<table class="table">
  <thead>
    <tr>
      <th>ジャンル</th>
      <th></th>
    </tr>
  </thead>
  <tbody>
    <% @genres.each do |genre| %>
      <tr>
        <td><%= genre.genre_name%></td>
        <td><%= link_to "編集する", edit_admin_genre_path(genre.id) %></td>
      </tr>
    <% end %>
  </tbody>  
</table>