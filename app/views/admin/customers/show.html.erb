<h2><%= @customer.full_name %>の会員詳細</h2>
<div class="field">
  <label for="name" class="col col-xs-12 col-sm-4 col-md-3 control-label">会員ID</label>
  <%= @customer.id %>
</div>

<div class="field">
  <label for="name" class="col col-xs-12 col-sm-4 col-md-3 control-label">氏名</label>
  <%= @customer.full_name %>
</div>

<div class="field">
  <label for="name" class="col col-xs-12 col-sm-4 col-md-3 control-label">フリガナ</label>
  <%= @customer.full_name_kana %>
</div>

<div class="field">
  <label for="name" class="col col-xs-12 col-sm-4 col-md-3 control-label">郵便番号</label>
  <%= @customer.postal_code %>
</div>

<div class="field">
  <label for="name" class="col col-xs-12 col-sm-4 col-md-3 control-label">住所</label>
  <%= @customer.address %>
</div>

<div class="field">
  <label for="name" class="col col-xs-12 col-sm-4 col-md-3 control-label">電話番号</label>
  <%= @customer.phone_number %>
</div>

<div class="field">
  <label for="name" class="col col-xs-12 col-sm-4 col-md-3 control-label">メールアドレス</label>
  <%= @customer.email %>
</div>

<div class="field">
  <label for="name" class="col col-xs-12 col-sm-4 col-md-3 control-label">会員ステータス</label>
  <%= @customer.is_deleted %>
</div>

<div class="actions">
  <%= link_to "編集する", edit_admin_customer_path(@customer) %>
  <%= link_to "注文履歴一覧を見る", "#" %>
</div>
