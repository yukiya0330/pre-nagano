<div class="container">
  <div class="row">
    <h2>注文履歴一覧</h2>
    <table class="table table-bordered">
      <thead>
        <tr>
          <th>注文日</th>
          <th>配送先</th>
          <th>注文商品</th>
          <th>支払い金額</th>
          <th>ステータス</th>
          <th>注文詳細</th>
        </tr>
      </thead>
      <tbody>
        <%= @orders.each do |order| %>
          <tr>
            <td><%= order.created_at %></td>
            <td><%= order.address %></td>
            <td><%= order.items.name %></td>
            <td><%= order.total_payment %></td>
            <td><%= order.order_status %></td>
            <td><%= link_to "表示する", public_order_path(order) %></td>
          </tr>
        <% end %>
      </tbody>    
    </table>
  </div>
</div>