<div class="container">
  <div class="row">
    <h2>マイページ</h2>
    <h2>登録情報</h2> <%= link_to "編集する", edit_public_customer_path(@customer) %>
    <table class="table table-bordered">
      <tr>
        <td>氏名</td>
        <td><%= @customer.full_name %></td>
      </tr>
      <tr>
        <td>カナ</td>
        <td><%= @customer.full_name_kana %></td>
      </tr>
      <tr>
        <td>郵便番号</td>
        <td><%= @customer.postal_code %></td>
      </tr>
      <tr>
        <td>住所</td>
        <td><%= @customer.address %></td>
      </tr>
      <tr>
        <td>電話番号</td>
        <td><%= @customer.phone_number %></td>
      </tr>
      <tr>
        <td>メールアドレス</td>
        <td><%= @customer.email %></td>
      </tr>
    </table>
    <h2>配送先</h2><%= link_to "一覧を見る", public_deliveries_path %>
    <h2>注文履歴</h2><%= link_to "一覧を見る", "#" %>
  </div>
</div>