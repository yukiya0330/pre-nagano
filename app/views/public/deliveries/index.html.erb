<div class="container">
  <h2>配送先登録一覧</h2>    
  <%= form_with model: Delivery.new, url: public_deliveries_path, method: :post do |f| %>
    <div class="field">
      <label for="name" class="col col-xs-12 col-sm-4 col-md-3 control-label">郵便番号(ハイフンなし)</label>
      <%= f.text_field :post_code, autofocus: true, autocomplete: "post_code" %>
    </div>
    
    <div class="field">
      <label for="name" class="col col-xs-12 col-sm-4 col-md-3 control-label">住所</label>
      <%= f.text_field :address, autofocus: true, autocomplete: "address" %>
    </div>
    
    <div class="field">
      <label for="name" class="col col-xs-12 col-sm-4 col-md-3 control-label">宛名</label>
      <%= f.text_field :name, autofocus: true, autocomplete: "name" %>
      <%= f.submit "新規登録" %>
    </div>
  <% end %>
  <div class="row">
    <table class="table table-bordered">
      <thead>
        <tr>
          <th>郵便番号</th>
          <th>住所</th>
          <th>宛名</th>
          <th></th>
        </tr>
      </thead>
      <tbody>
        <% @deliveries.each do |delivery| %>
          <tr>
            <td><%= delivery.post_code %></td>
            <td><%= delivery.address %></td>
            <td><%= delivery.name %></td>
            <td><%= link_to "編集する", edit_public_delivery_path(delivery.id) %><%= link_to "削除する", public_delivery_path(delivery.id), method: :delete %></td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>